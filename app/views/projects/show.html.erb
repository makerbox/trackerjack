<p id="notice"><%= notice %></p>

<p>
  <strong><%= @project.title %></strong> - <%= @project.client.name %>
</p>

<p>
  $<%= number_with_precision(@project.quote_price, precision: 2) %>
</p>

<p>
  <%= @project.quote_time %> days
</p>

<%= link_to '', :back, class: 'showbutton glyphicon glyphicon-arrow-left' %>
<%= link_to '', edit_project_path(@project), class: 'showbutton glyphicon glyphicon-pencil' %>
<%= link_to '', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'showbutton glyphicon glyphicon-trash' %>
